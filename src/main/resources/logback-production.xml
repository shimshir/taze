<included>

    <appender name="loggly" class="ch.qos.logback.ext.loggly.LogglyAppender">
        <endpointUrl>http://logs-01.loggly.com/inputs/fe9c6139-c489-478d-8270-088d07d5aba5/tag/logback</endpointUrl>
        <pattern>%d{"ISO8601", UTC}  %p %t %c %M - %m%n</pattern>
    </appender>

    <logger name="de.admir.taze.metrics.TazeTraceRepository" level="info">
        <appender-ref ref="loggly"/>
    </logger>

    <logger name="de.admir.taze.service.MailService" level="info">
        <appender-ref ref="loggly"/>
    </logger>

    <root level="off"/>

</included>
